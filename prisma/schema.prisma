generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


/* =============================
   ARTICLE
============================= */
model Article {
  id          String    @id @default(cuid())
  Judul       String
  slug        String    @unique
  coverImage  String?
  publishTime DateTime?
  penulis    String
  category  String
  artikel   String

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
}
